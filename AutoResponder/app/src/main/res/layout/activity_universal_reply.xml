<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.seniordesign.autoresponder.Interface.UniversalReply">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/universalReply_editText"
        android:maxLength="144"
        android:hint="Sorry I don&apos;t have my phone right now!"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Text"
        android:id="@+id/setUniversalReplyEditText"
        android:layout_below="@+id/universalReply_editText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Overrides all preset responses for each Contact and Group, using the following text as a message to everyone!"
        android:id="@+id/universalReply_instructions"
        android:singleLine="false"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Toggle indicates if Universal Reply is Active:"
        android:id="@+id/universalReplyOverride_instructions"
        android:singleLine="false"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/setUniversalReplyEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Override All Responses "
        android:id="@+id/universalReplyToggle"
        android:layout_below="@+id/universalReplyOverride_instructions"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:checked="false"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Does not affect Location and Activity requests."
        android:id="@+id/textView5"
        android:singleLine="false"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/universalReply_instructions"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff" />


</RelativeLayout>
