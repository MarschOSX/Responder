<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seniordesign.autoresponder" >

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Interface.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Interface.GeneralResponse"
            android:label="@string/title_activity_general_response" >
        </activity>

        <receiver android:name=".Receiver.EventListener" >
            <intent-filter android:priority="1000" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".Interface.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Interface.ContactsList"
            android:label="@string/title_activity_contacts_list" >
        </activity>
        <activity
            android:name=".Interface.SingleContact"
            android:label="@string/title_activity_single_contact" >
        </activity>
        <activity
            android:name=".Interface.SetContactGroup"
            android:label="@string/title_activity_set_contact_group" >
        </activity>
        <activity
            android:name=".Interface.ManageGroups"
            android:label="@string/title_activity_manage_groups" >
        </activity>
        <activity
            android:name=".Interface.NewGroup"
            android:label="@string/title_activity_new_group" >
        </activity>
        <activity
            android:name=".Interface.SingleGroup"
            android:label="@string/title_activity_single_group" >
        </activity>
    </application>

</manifest>
